---
import HTMLIcon from '~/icons/html-icon.svelte';
import JSIcon from '~/icons/js-icon.svelte';
import AngularLogo from '~/icons/logos/angular-logo.svelte';
import JSDelivrLogo from '~/icons/logos/jsdelivr-logo.svelte';
import ReactLogo from '~/icons/logos/react-logo.svelte';
import SolidLogo from '~/icons/logos/solid-logo.svelte';
import SvelteLogo from '~/icons/logos/svelte-logo.svelte';
import VueLogo from '~/icons/logos/vue-logo.svelte';

import AngularInfo from './info/frameworks/angular-info.mdx';
import CDNInfo from './info/frameworks/cdn-info.mdx';
import JSInfo from './info/frameworks/js-info.mdx';
import ReactInfo from './info/frameworks/react-info.mdx';
import SolidInfo from './info/frameworks/solid-info.mdx';
import SvelteInfo from './info/frameworks/svelte-info.mdx';
import VueInfo from './info/frameworks/vue-info.mdx';
import WCInfo from './info/frameworks/wc-info.mdx';
import Selections from './selections.astro';
---

<Selections
  basePath="/docs/player/getting-started/installation"
  type="js"
  label="Frameworks"
  options={[
    {
      label: 'JavaScript',
      Info: JSInfo,
      Icon: JSIcon,
      color: 'yellow',
    },
    {
      label: 'Angular',
      Info: AngularInfo,
      Icon: AngularLogo,
      color: 'red',
    },
    {
      label: 'React',
      Info: ReactInfo,
      Icon: ReactLogo,
      color: 'blue',
    },
    {
      label: 'Svelte',
      Info: SvelteInfo,
      Icon: SvelteLogo,
      color: 'red',
    },
    {
      label: 'Vue',
      Info: VueInfo,
      Icon: VueLogo,
      color: 'green',
    },
    {
      label: 'Solid',
      Info: SolidInfo,
      Icon: SolidLogo,
      color: 'blue',
    },
    {
      label: 'Web Components',
      Info: WCInfo,
      Icon: HTMLIcon,
      color: 'red',
    },
    {
      label: 'CDN',
      Info: CDNInfo,
      Icon: JSDelivrLogo,
      color: 'orange',
    },
  ]}
/>

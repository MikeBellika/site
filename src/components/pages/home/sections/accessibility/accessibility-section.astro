---
import AudioIcon from '~astro-icons/lucide/audio-lines';
import CaptionsIcon from '~astro-icons/lucide/captions';
import CompliantIcon from '~astro-icons/lucide/circle-check-big';
import FocusIcon from '~astro-icons/lucide/focus';
import KeyboardIcon from '~astro-icons/lucide/keyboard';
import TooltipsIcon from '~astro-icons/lucide/message-square-text';
import ColorIcon from '~astro-icons/lucide/palette';
import LabelIcon from '~astro-icons/lucide/rectangle-ellipsis';
import MotionIcon from '~astro-icons/lucide/rotate-3d';
import CustomizationIcon from '~astro-icons/lucide/settings-2';
import AnnouncerIcon from '~astro-icons/lucide/speech';

import GridContent from '~/components/sections/grid-content.astro';

const items = [
  {
    title: 'Announcements',
    description: 'Informative screen reader updates for media state changes.',
    Icon: AnnouncerIcon,
    href: '/docs/player/components/display/announcer',
  },
  {
    title: 'Labels',
    description: 'Clear semantic labels and roles for screen readers.',
    Icon: LabelIcon,
    href: '/docs/player/getting-started/accessibility#labels',
  },
  {
    title: 'Captions',
    description: 'Consistent and customizable captions across browsers.',
    Icon: CaptionsIcon,
    href: '/docs/player/getting-started/accessibility#captions',
  },
  {
    title: 'Audio',
    description: 'Multitrack audio support for i18n and descriptions.',
    Icon: AudioIcon,
    href: '/docs/player/getting-started/accessibility#audio-descriptions',
  },
  {
    title: 'Keyboard',
    description: 'Full keyboard navigation support and shortcuts.',
    Icon: KeyboardIcon,
    href: '/docs/player/getting-started/accessibility#keyboard-navigation',
  },
  {
    title: 'Focus',
    description: 'Robust focus management and clear indicators.',
    Icon: FocusIcon,
    href: '/docs/player/getting-started/accessibility#focus-management',
  },
  {
    title: 'Color',
    description: 'Accessible contrasts and color scheme options.',
    Icon: ColorIcon,
    href: '/docs/player/components/layouts/default-layout#color-scheme',
  },
  {
    title: 'Tooltips',
    description: 'Popover text to provide more helpful descriptions.',
    Icon: TooltipsIcon,
    href: '/docs/player/components/buttons/tooltip',
  },
  {
    title: 'Motion',
    description: 'Reduced motion support for vestibular disorders.',
    Icon: MotionIcon,
    href: 'https://developer.mozilla.org/en-US/docs/Web/CSS/@media/prefers-reduced-motion',
  },
  {
    title: 'Customize',
    description: 'Tailored user settings for all player preferences.',
    Icon: CustomizationIcon,
    href: 'https://x.com/mihar_22/status/1764864228052345167',
  },
  {
    title: 'Compliant',
    description: 'WCAG 2.2, WAI-ARIA, and CVAA spec-compliant.',
    Icon: CompliantIcon,
    href: '/docs/player/getting-started/accessibility#guidelines',
  },
];
---

<GridContent label="Accessibility Features" content={items} newTab />

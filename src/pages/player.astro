---
import ConstructionIcon from '~astro-icons/lucide/construction';

import DefaultLayout from '../layouts/default-layout.astro';
import AnnouncementBar from '../layouts/parts/announcement-bar.astro';

const title =
  'Vidstack Player: High-quality, accessible, and customizable media player for the web.';
const description =
  'Build and ship a production-ready player in minutes. Robust, customizable, and accessible.';
---

<DefaultLayout {title} {description}>
  <AnnouncementBar href="https://github.com/vidstack/player/discussions/1220" slot="announcement">
    <span class="font-semibold">Player:</span> 1.0-RC!
  </AnnouncementBar>

  <div class="flex h-[var(--content-height)] flex-1 flex-col items-center justify-center px-4">
    <ConstructionIcon
      class="-mt-[var(--content-top)] h-40 w-40 text-inverse/50 1200:h-64 1200:w-64"
    />

    <h1 class="mt-4 flex flex-col items-center text-center font-semibold text-inverse 1200:text-xl">
      This page is still under construction and coming soon for our 1.0 release!
      <a class="mt-2 font-medium text-brand underline hocus:text-brand/70" href="/docs/player">
        Check out the docs to get started.
      </a>
    </h1>
  </div>
</DefaultLayout>

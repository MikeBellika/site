---
import VidstackLogo from '../../icons/logos/vidstack-logo.svelte';
import VidstackSymbol from '../../icons/logos/vidstack-symbol.svelte';
import FooterLinks from './footer-links.astro';
---

<div class="mt-12"></div>

<div class="mb-8 flex w-full pr-4 768:mb-16 768:pr-6 992:pr-10">
  <div class="flex-1"></div>
  <div class="h-6 w-20 rounded-full border-2 border-border/90 shadow-sm"></div>
  <div class="ml-3 h-6 w-6 rounded-full border-2 border-border/90 shadow-sm"></div>
</div>

<footer class="w-full border-t border-border/80 px-4 pb-6 pt-10 text-base 768:px-6">
  <div class="mx-auto w-full max-w-[var(--content-max-width)]">
    <div class="flex flex-col">
      <div class="flex flex-col space-y-10 768:flex-row 768:space-x-16 768:space-y-0">
        <div class="flex flex-row items-center 768:flex-col 768:items-start">
          <div class="768:hidden">
            <VidstackSymbol />
          </div>
          <div class="hidden 768:inline-block dark:768:-ml-1">
            <VidstackLogo />
          </div>
          <div class="ml-2 text-soft 768:ml-0 768:mt-3">
            From the creators of
            <a
              class="font-medium text-inverse hocus:underline"
              href="https://vimejs.com"
              target="_blank"
            >
              Vime
            </a>
            &
            <a
              class="font-medium text-inverse hocus:underline"
              href="https://plyr.io"
              target="_blank"
            >
              Plyr</a
            >.
          </div>
        </div>

        <div class="pointer-events-none hidden 768:inline-block 768:flex-1"></div>

        <div
          class="grid grid-cols-1 gap-x-14 gap-y-16 420:mx-auto 420:grid-cols-2 576:gap-x-16 576:px-4"
        >
          <FooterLinks
            title="Socials"
            links={[
              { title: 'Twitter', href: 'https://twitter.com/vidstackjs?lang=en' },
              { title: 'Discord', href: 'https://discord.gg/QAjfh2gZE4' },
              { title: 'GitHub', href: 'https://github.com/vidstack' },
            ]}
          />

          <FooterLinks
            title="Resources"
            links={[
              { title: 'Docs', href: '/docs' },
              { title: 'Media', href: 'https://github.com/vidstack/media-files' },
              { title: 'Icons', href: '/media-icons' },
              { title: 'Captions', href: 'https://github.com/vidstack/media-captions' },
            ]}
          />
        </div>
      </div>

      <div class="mt-12 flex w-full items-center py-2.5 text-xs text-soft 768:mt-0">
        Â© {new Date().getFullYear()} Vidstack
      </div>
    </div>
  </div>
</footer>
